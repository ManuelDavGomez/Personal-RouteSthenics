---
import Layout from "../layouts/Layout.astro";
import Hero from "../videos/hero.mp4";
import Exerc from "../components/Exercise/Exerc.jsx";
import ExercBasic from "../components/Exercise/ExercBasic.jsx";
import Warm from "../components/Exercise/Warm.jsx";
---

<Layout title="Calisthenics Roadmaps">
  <main>
    <section class="hero_video">
      <video autoplay muted loop id="video-bg">
        <source src={Hero} type="video/mp4" />
        Tu navegador no admite la etiqueta de video.
      </video>
      <div class="overlay"></div>
    </section>
    <section class="container_general">
      <section class="hero_home">
        <h1>Roadmaps para calistenicos</h1>
        <p>
          Lorem ipsum dolor sit amet consectetur adipisicing elit. Quos,
          asperiores sint reprehenderit aliquid, quod dolores non minus,
          consequatur a optio perferendis ea temporibus ut natus quidem debitis
          officia accusantium dolor?
        </p>
      </section>
      <Exerc client:load />
      <Warm client:load />
      <ExercBasic client:load />
    </section>
  </main>
</Layout>

<style>
  :root {
    scrollbar-width: thin;
    scrollbar-color: #0084ff #272727;
  }

  .container_general {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding-left: 1.8rem;
    padding-right: 1.8rem;
    max-width: 820px;
    margin: 80px auto 0px auto;
    scrollbar-color: black blue;
    scrollbar-width: thin;
  }

  /* ------ */
  .hero_video {
    position: relative;
    width: 100%;
    height: 90vh;
    overflow: hidden;
    clip-path: polygon(
      50% 0%,
      100% 0%,
      100% 91.5%,
      75% 100%,
      25% 100%,
      0% 91%,
      0% 0%
    );
  }

  #video-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
  }
  /* ----- */
  .hero_home {
    width: 100%;
    margin-bottom: 60px;
  }
  .hero_home h1 {
    padding-bottom: 20px;
    text-align: center;
    background: #101cba;
    background: -webkit-linear-gradient(to left, #101cba 0%, #00cfc8 100%);
    background: -moz-linear-gradient(to left, #101cba 0%, #00cfc8 100%);
    background: linear-gradient(to left, #101cba 0%, #00cfc8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: "aero", sans-serif;
  }
  .hero_home p {
    font-size: 1.125rem;
    color: #9ca391;
    line-height: 1.75rem;
    text-align: center;
    font-family: "mystice", sans-serif;
  }
  /* ------ */
  .principal_container {
    width: 100%;
    margin-bottom: 100px;
  }
  .principal_container h2 {
    text-align: center;
    padding-bottom: 40px;
    font-family: "aero";
    color: #c7eeff;
  }
</style>
