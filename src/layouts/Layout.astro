---
import Navbar from "../components/Navbar.astro";
import Foot from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Descubre tu camino hacia la excelencia física con nuestra página de inicio sobre rutas de aprendizaje de ejercicios de calistenia. Encuentra la guía perfecta para alcanzar tus objetivos y dominar la calistenia."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <Navbar />
    </header>
    <slot />

    <Foot />
  </body>
</html>
<style is:global>
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    transition: all 0.2s;
  }

  ul,
  li,
  a {
    list-style: none;
    color: white;
    text-decoration: none;
  }

  body {
    background: #000000;
    background: -webkit-linear-gradient(0deg, #000000 0%, #001535 100%);
    background: linear-gradient(0deg, #000000 0%, #001535 100%);
  }

  h1 {
    font-size: 2.5rem;
  }
  h2 {
    font-size: 2rem;
  }
  h3 {
    font-size: 1.8rem;
  }
  h4 {
    font-size: 1.5rem;
  }
  h5 {
    font-size: 1.3rem;
  }
  h6 {
    font-size: 1.1rem;
  }

  @font-face {
    font-family: "aero";
    src: url("../fonts/Aero.ttf");
    font-weight: normal;
    font-style: normal;
  }

  @font-face {
    font-family: "mystice";
    src: url("../fonts/Mystice.otf");
    font-weight: normal;
    font-style: normal;
  }
</style>
